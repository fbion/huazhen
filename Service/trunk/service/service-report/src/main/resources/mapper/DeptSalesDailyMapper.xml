<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzfh.service.report.mapper.DeptSalesDailyMapper">
	<resultMap type="com.hzfh.api.report.model.DeptSalesDaily" id="resultMapDeptSalesDaily">
		<result property="id" column="id"/>
		<result property="productNo" column="product_no"/>
		<result property="productName" column="product_name"/>
		<result property="deptNo" column="dept_no"/>
		<result property="deptName" column="dept_name"/>
		<result property="moneyTotal" column="money_total"/>
		<result property="clacTime" column="clac_time"/>
		<result property="inUserNo" column="in_user_no"/>
		<result property="inTime" column="in_time" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
		<result property="editUserNo" column="edit_user_no"/>
		<result property="editTime" column="edit_time" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
		<result property="editComment" column="edit_comment"/>
	</resultMap>
	<select id="getList" resultMap="resultMapDeptSalesDaily">
		SELECT id,product_no,product_name,dept_no,dept_name,money_total,clac_time,in_user_no,in_time,edit_user_no,edit_time,edit_comment
		FROM dept_sales_daily
	</select>
	<select id="getPagingList" resultMap="resultMapDeptSalesDaily" parameterType="com.hzfh.api.report.model.query.DeptSalesDailyCondition" statementType="STATEMENT">
		SELECT id,product_no,product_name,dept_no,dept_name,money_total,clac_time,in_user_no,in_time,edit_user_no,edit_time,edit_comment FROM dept_sales_daily where 1=1
		ORDER BY
		<foreach item="item" collection="sortItemList" separator=",">
			${item.sortFeild} ${item.sortType}
		</foreach>
		LIMIT ${startIndex},${pageSize}
	</select>
	<select id="getTotalCount" resultType="int" parameterType="com.hzfh.api.report.model.query.DeptSalesDailyCondition" statementType="STATEMENT">
		SELECT count(1) FROM dept_sales_daily where 1=1
	</select>
	<select id="getInfo" resultMap="resultMapDeptSalesDaily" parameterType="int">
		SELECT id,product_no,product_name,dept_no,dept_name,money_total,clac_time,in_user_no,in_time,edit_user_no,edit_time,edit_comment FROM dept_sales_daily where id=#{id}
	</select>
	<insert id="add" parameterType="com.hzfh.api.report.model.DeptSalesDaily" useGeneratedKeys="true" keyProperty="id">
		insert into dept_sales_daily
		(product_no,product_name,dept_no,dept_name,money_total,clac_time,in_user_no,in_time,edit_user_no,edit_time,edit_comment)
		values
		(#{productNo},#{productName},#{deptNo},#{deptName},#{moneyTotal},#{clacTime},#{inUserNo},current_timestamp(),#{editUserNo},current_timestamp(),#{editComment})
	</insert>
	<update id="update" parameterType="com.hzfh.api.report.model.DeptSalesDaily">
		update dept_sales_daily set 
		product_no=#{productNo},product_name=#{productName},dept_no=#{deptNo},dept_name=#{deptName},money_total=#{moneyTotal},clac_time=#{clacTime},edit_user_no=#{editUserNo},edit_time=current_timestamp(),edit_comment=#{editComment}
		where id=#{id}
	</update>
	<delete id="delete" parameterType="int">
		delete from dept_sales_daily where id = #{id}
	</delete>
</mapper>